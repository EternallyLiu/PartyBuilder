<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:id="@+id/rl_prog"
                xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="@dimen/abc_action_bar_default_height_material"
                android:background="?attr/background"
                android:gravity="center"
                android:orientation="horizontal">

    <ProgressBar
        android:id="@+id/footer_progress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/footer_tv"
        android:layout_alignTop="@+id/footer_tv"/>

    <TextView
        android:id="@+id/footer_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@+id/footer_progress"
        android:text="正在加载..."
        android:textAppearance="?android:textAppearanceSmall"
        android:textColor="@android:color/black"/>

</RelativeLayout>